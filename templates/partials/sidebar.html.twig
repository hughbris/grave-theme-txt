{% set default_sidebar = config.theme.sidebar|default([]) %}
{% set items = page.header.sidebar|default(default_sidebar) %}
<!-- Sidebar -->
{% for item in items %}
	{% include "partials/sidebar/#{item.type}.html.twig" ignore missing with {'item': item} %}
{% else %}
	{{ dump('Notice: No sidebar items or default sidebar items available for this page.') }}
{% endfor %}
